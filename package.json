{
  "name": "augment-usage-tracker",
  "displayName": "Augment Usage Tracker",
  "description": "Track and display Augment AI usage statistics in VSCode status bar",
  "version": "1.0.4",
  "publisher": "augment-usage-tracker",
  "author": {
    "name": "akapril",
    "email": "wiq@live.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akapril/augment-usage-tracker"
  },
  "bugs": {
    "url": "https://github.com/akapril/augment-usage-tracker/issues"
  },
  "homepage": "https://github.com/akapril/augment-usage-tracker#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "augment",
    "ai",
    "usage",
    "tracker",
    "statistics"
  ],
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "augmentTracker",
          "name": "Augment Tracker",
          "when": "true"
        }
      ]
    },
    "commands": [
      {
        "command": "augmentTracker.showDetails",
        "title": "%command.showDetails%",
        "category": "Augment Tracker"
      },
      {
        "command": "augmentTracker.manualRefresh",
        "title": "%command.manualRefresh%",
        "category": "Augment Tracker"
      },
      {
        "command": "augmentTracker.openSettings",
        "title": "%command.openSettings%",
        "category": "Augment Tracker"
      },
      {
        "command": "augmentTracker.resetUsage",
        "title": "%command.resetUsage%"
      },
      {
        "command": "augmentTracker.setupCookies",
        "title": "%command.setupCookies%"
      },
      {
        "command": "augmentTracker.checkAuthStatus",
        "title": "%command.checkAuthStatus%"
      },
      {
        "command": "augmentTracker.webLogin",
        "title": "%command.webLogin%"
      },
      {
        "command": "augmentTracker.setLanguage",
        "title": "%command.setLanguage%"
      },
      {
        "command": "augmentTracker.checkCookieStatus",
        "title": "%command.checkCookieStatus%"
      },
      {
        "command": "augmentTracker.refreshCookie",
        "title": "%command.refreshCookie%"
      },
      {
        "command": "augmentTracker.logout",
        "title": "%command.logout%"
      },
      {
        "command": "augmentTracker.autoRegister",
        "title": "%command.autoRegister%"
      },
      {
        "command": "augmentTracker.puppeteerLogin",
        "title": "%command.puppeteerLogin%"
      },
      {
        "command": "augmentTracker.manageAccounts",
        "title": "%command.manageAccounts%"
      },
      {
        "command": "augmentTracker.switchAccount",
        "title": "%command.switchAccount%"
      },
      {
        "command": "augmentTracker.addAccount",
        "title": "%command.addAccount%"
      },
      {
        "command": "augmentTracker.removeAccount",
        "title": "%command.removeAccount%"
      },
      {
        "command": "augmentTracker.inviteTeamMembers",
        "title": "%command.inviteTeamMembers%"
      },
      {
        "command": "augmentTracker.autoAcceptInvitations",
        "title": "%command.autoAcceptInvitations%"
      },
      {
        "command": "augmentTracker.teamManagement",
        "title": "%command.teamManagement%"
      },
      {
        "command": "augmentTracker.nativeManagement",
        "title": "%command.nativeManagement%"
      },
      {
        "command": "augmentTracker.refreshTreeView",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "augmentTracker.inviteTeamMembersInput",
        "title": "邀请团队成员"
      },
      {
        "command": "augmentTracker.autoAcceptInvitationsInput",
        "title": "自动接受邀请"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "augmentTracker.refreshTreeView",
          "when": "view == augmentTracker",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Augment Usage Tracker",
      "properties": {
        "augmentTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the Augment usage tracker"
        },
        "augmentTracker.refreshInterval": {
          "type": "number",
          "default": 30,
          "description": "Status bar refresh interval in seconds",
          "minimum": 1,
          "maximum": 300
        },
        "augmentTracker.showInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show usage statistics in status bar"
        },
        "augment.cookies": {
          "type": "string",
          "default": "",
          "description": "Augment browser session cookies",
          "scope": "application"
        },
        "augmentTracker.language": {
          "type": "string",
          "enum": ["auto", "en", "zh-cn"],
          "enumDescriptions": [
            "Auto (Follow VSCode)",
            "English",
            "Simplified Chinese"
          ],
          "default": "auto",
          "description": "Interface language setting",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "package": "npx @vscode/vsce package --no-dependencies",
    "clean": "rimraf out *.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "puppeteer-core": "^21.0.0"
  }
}
